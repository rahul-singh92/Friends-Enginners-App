<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jitendersingh.friendsengineer"
    xmlns:tools="http://schemas.android.com/tools">

    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:mimeType="application/pdf" />
        </intent>
    </queries>

    <!-- Permissions for Android 6.0 to Android 12 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />

    <!-- Permissions for Android 13+ (API 33+) -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO"/>
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO"/>

    <!-- Internet permission -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FriendsEngineer"
        tools:targetApi="31">

        <!-- Splash Screen Activity (Launcher Activity) -->
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".WorkerActivity" />
        <activity android:name=".TableListActivity" />
        <activity android:name=".DataListActivity" />
        <activity android:name=".DataDetailActivity" />
        <activity android:name=".AdvanceRequestActivity" />
        <activity android:name=".BranchListActivity" />
        <activity android:name=".BranchPdfListActivity" />
        <activity android:name=".CredentialsTablesActivity" />
        <activity android:name=".CredentialsDetailsActivity" />
        <activity android:name=".ViewWorkerDetailsActivity" />
        <activity android:name=".WorkerDetailActivity" />
        <activity android:name=".WorkerDetailsActivity" />
        <activity android:name=".WorkerScheduleActivity" />
        <activity android:name=".PdfWebViewActivity"
            android:label="View Wage Slip"/>

        <!-- FileProvider for sharing files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".WageCollectionsActivity" />
        <activity android:name=".WagePersonListActivity" />
        <activity android:name=".ViewPdfPageActivity" />
        <activity
            android:name=".TotalAdvanceActivity"
            android:label="Total Advance"
            android:exported="false" />
        <activity android:name=".TotalRequestedActivity"
            android:exported="false" />
        <activity android:name=".MessageActivity" />
        <activity android:name=".MessageViewOnlyActivity" />

    </application>

</manifest>
