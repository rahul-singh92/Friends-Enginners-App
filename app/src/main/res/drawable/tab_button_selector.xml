<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape>
            <solid android:color="#1565C0" /> <!-- Dark Blue -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0D47A1" /> <!-- Even Darker Blue -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#90CAF9" /> <!-- Light Blue -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
