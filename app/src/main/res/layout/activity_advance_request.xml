<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E">

    <!-- Modern Header with Windows 11 style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        android:orientation="vertical"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- Back button circle -->
            <LinearLayout
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/win11_circle_button"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_revert"
                    app:tint="#FFFFFF" />

            </LinearLayout>

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advance Requests"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage advance requests"
                    android:textSize="13sp"
                    android:textColor="#A0A0A0"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Status badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/win11_count_badge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

        <!-- Modern TabLayout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/advance_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#252525"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorColor="#2196F3"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="#FFFFFF"
            app:tabTextColor="#808080"
            app:tabTextAppearance="@style/DarkTabTextAppearance"
            app:tabIndicatorFullWidth="true"
            app:tabRippleColor="#1A2196F3" />

    </LinearLayout>

    <!-- ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/advance_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1E1E1E" />

</LinearLayout>
