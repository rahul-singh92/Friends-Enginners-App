<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/win11_card_background"
    android:orientation="horizontal"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:elevation="0dp">

    <!-- Credential Icon -->
    <LinearLayout
        android:id="@+id/credentialIconContainer"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/win11_credential_icon_bg"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_lock_lock"
            android:tint="#FFFFFF" />

    </LinearLayout>

    <!-- Credential Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="14dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/credentialTableName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credential Table"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/credentialTableDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage access credentials"
            android:textSize="13sp"
            android:textColor="#A0A0A0"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Chevron icon -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_menu_send"
        android:tint="#606060"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:rotation="270" />

</LinearLayout>
