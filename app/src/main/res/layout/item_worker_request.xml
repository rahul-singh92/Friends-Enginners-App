<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/win11_card_background"
    android:orientation="vertical"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:elevation="0dp">

    <!-- Header: Name and Amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- Name -->
        <TextView
            android:id="@+id/worker_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Name: Worker Name"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Amount Badge -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/win11_amount_badge"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center">

            <TextView
                android:id="@+id/worker_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹0"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>

    <!-- Father's Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FATHER'S NAME"
            android:textSize="10sp"
            android:textColor="#808080"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/worker_father_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Father's Name: Name Here"
            android:textSize="14sp"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Reason -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REASON"
            android:textSize="10sp"
            android:textColor="#808080"
            android:textAllCaps="true"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/worker_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason: Reason here"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Requested Time with Icon -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@android:drawable/ic_menu_recent_history"
            android:tint="#808080"
            android:layout_marginEnd="6dp" />

        <TextView
            android:id="@+id/worker_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requested On: 01-01-2025 12:00:00"
            android:textSize="12sp"
            android:textColor="#A0A0A0" />

    </LinearLayout>

</LinearLayout>
