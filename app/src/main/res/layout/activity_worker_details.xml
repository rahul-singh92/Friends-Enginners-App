<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Centered Worker Image -->
        <ImageView
            android:id="@+id/workerImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:contentDescription="Worker Image"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:clipToOutline="true" />

        <!-- Card grouping personal details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            android:elevation="4dp"
            android:background="@android:color/white"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Template for each field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="P. No." />

                    <TextView
                        android:id="@+id/textPNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_weight="2"
                        android:paddingStart="8dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                <!-- Repeat the field layout for each field below -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="ESI No." />

                    <TextView
                        android:id="@+id/textESINo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_weight="2"
                        android:paddingStart="8dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="UAN No." />

                    <TextView
                        android:id="@+id/textUANNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_weight="2"
                        android:paddingStart="8dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                <!-- Continue for all other fields with the same pattern -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="PF No." />

                    <TextView
                        android:id="@+id/textPFNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_weight="2"
                        android:paddingStart="8dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="Name" />

                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_weight="2"
                        android:paddingStart="8dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="Father's Name" />

                    <TextView
                        android:id="@+id/textFatherName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_weight="2"
                        android:paddingStart="8dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="Contact" />

                    <TextView
                        android:id="@+id/textContact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_weight="2"
                        android:paddingStart="8dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="Date of Joining" />

                    <TextView
                        android:id="@+id/textDOJ"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_weight="2"
                        android:paddingStart="8dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:paddingStart="16dp"
                        android:text="Department"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:id="@+id/textDepartment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>



                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#222222"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:text="Date of Leaving" />

                    <TextView
                        android:id="@+id/textDOL"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#555555"
                        android:layout_weight="2"
                        android:paddingStart="8dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
