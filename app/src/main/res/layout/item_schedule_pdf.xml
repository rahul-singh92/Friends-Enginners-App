<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/win11_card_background"
    android:orientation="horizontal"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:elevation="0dp">

    <!-- Schedule Icon -->
    <LinearLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="@drawable/win11_schedule_icon_bg"
        android:gravity="center">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:tint="#FFFFFF" />

    </LinearLayout>

    <!-- Schedule Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="14dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/scheduleDateRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Date - End Date"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:ellipsize="end" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/scheduleStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start: 01/01/2024"
                android:textSize="12sp"
                android:textColor="#A0A0A0"
                android:background="@drawable/win11_date_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/scheduleEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End: 31/12/2024"
                android:textSize="12sp"
                android:textColor="#A0A0A0"
                android:background="@drawable/win11_date_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- View icon -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_menu_view"
        android:tint="#606060"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp" />

</LinearLayout>
