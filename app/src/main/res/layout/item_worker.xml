<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/win11_card_background"
    android:orientation="horizontal"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:elevation="0dp">

    <!-- Worker Avatar -->
    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/workerAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_person_24"
            android:background="#2196F3" />

    </androidx.cardview.widget.CardView>

    <!-- Worker Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="14dp"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/workerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Worker Name"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FFFFFF"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/workerFatherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Father's Name"
            android:textSize="13sp"
            android:textColor="#A0A0A0"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/workerDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textSize="11sp"
            android:textColor="#808080"
            android:background="@drawable/win11_date_badge"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="6dp" />

    </LinearLayout>

    <!-- Chevron icon -->
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_menu_send"
        app:tint="#606060"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:rotation="270" />

</LinearLayout>
