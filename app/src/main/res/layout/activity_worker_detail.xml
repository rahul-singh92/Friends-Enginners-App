<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1E1E1E">

    <!-- Modern Header with Windows 11 style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        android:orientation="vertical"
        android:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- Back button circle -->
            <LinearLayout
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/win11_circle_button"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_revert"
                    app:tint="#FFFFFF" />

            </LinearLayout>

            <!-- Title Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/headerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Worker Profile"
                    android:textSize="22sp"
                    android:textStyle="normal"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/headerDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Department"
                    android:textSize="13sp"
                    android:textColor="#A0A0A0"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Status badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/win11_count_badge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_menu_info_details"
                    app:tint="#FFFFFF" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1E1E1E"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Image Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="75dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/worker_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_person_24"
                        android:background="#2D2D2D" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/workerNameLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Worker Name"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <!-- Personal Information Card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERSONAL INFORMATION"
                android:textSize="11sp"
                android:textColor="#808080"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/win11_field_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="20dp">

                <!-- Name Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NAME"
                        android:textSize="11sp"
                        android:textColor="#808080"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/workerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Father's Name Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FATHER'S NAME"
                        android:textSize="11sp"
                        android:textColor="#808080"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/workerFatherName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Contact Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONTACT NUMBER"
                        android:textSize="11sp"
                        android:textColor="#808080"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/workerContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Employment Information Card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMPLOYMENT INFORMATION"
                android:textSize="11sp"
                android:textColor="#808080"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/win11_field_card"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="20dp">

                <!-- P. No Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P. NO."
                        android:textSize="11sp"
                        android:textColor="#808080"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/workerPNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- ESI No Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ESI NO."
                        android:textSize="11sp"
                        android:textColor="#808080"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/workerESI"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- UAN No Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UAN NO."
                        android:textSize="11sp"
                        android:textColor="#808080"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/workerUAN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- PF No Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PF NO."
                        android:textSize="11sp"
                        android:textColor="#808080"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/workerPF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Department Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEPARTMENT"
                        android:textSize="11sp"
                        android:textColor="#808080"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/workerDepartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Date of Joining Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATE OF JOINING"
                        android:textSize="11sp"
                        android:textColor="#808080"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/workerDOJ"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Date of Leave Field -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATE OF LEAVE"
                        android:textSize="11sp"
                        android:textColor="#808080"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/workerDOL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textSize="15sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
